generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model student {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now()) @db.DateTime(0)
  updated_at DateTime? @updatedAt
  role       String    @default("student")

  // personal informations
  lastname  String
  firstname String
  email     String @unique
  password  String @default(cuid())
  telephone String
  address   String
  field     String
  year      String

  master       String?
  internMaster String?
  subject      String?

  // conditions before ready
  is_school_fees_paid            Boolean? @default(false)
  is_credit_enough               Boolean? @default(false)
  is_profil_information_complete Boolean? @default(false)
  is_ready_for_presentation      Boolean? @default(false)

  // when profil status is okay
  presentation_date        String?
  presentation_room        String?
  is_presentation_finished Boolean? @default(false)
  final_decision           String?
  appreciation             String?
  case_closed              Boolean? @default(false)

  // foreign keys
  direction   direction @relation(fields: [directionId], references: [id])
  directionId String
}

model direction {
  id         String   @id @default(cuid())
  created_at DateTime @default(now()) @db.DateTime(0)
  updated_at DateTime @updatedAt
  role       String   @default("direction")

  email           String  @unique
  password        String  @default(cuid())
  university_name String  @unique
  telephone       String
  address         String?

  limit_date String?

  student student[]
}

model admin {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now()) @db.DateTime(0)
  updated_at DateTime @updatedAt
  role       String   @default("admin")

  name      String
  email     String @unique
  password  String
  telephone String
}

